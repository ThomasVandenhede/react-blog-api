{
  "parser": "babel-eslint",
  "extends": ["standard", "prettier"],
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "env": {
    "jest": true,
    "jasmine": true
  }
}
